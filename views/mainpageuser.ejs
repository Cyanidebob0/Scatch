<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Main Page User</title>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
  </head>
  <body class="bg-gray-50">
    <div
      class="w-full h-16 bg-white shadow flex items-center justify-between px-6"
    >
      <h1 class="text-2xl font-bold tracking-tight">Scatch</h1>
      <div class="flex items-center gap-6">
        <button class="text-gray-700 hover:text-black">
          <i class="ph ph-shopping-cart text-2xl"></i>
        </button>
        <button class="text-gray-700 hover:text-black">
          <i class="ph ph-user-circle text-2xl"></i>
        </button>
        <a
          class="bg-red-400 hover:bg-red-500 text-white px-4 py-2 rounded-lg text-sm"
          href="/users/logout"
        >
          Logout
        </a>
      </div>
    </div>

    <div class="flex h-[calc(100vh-4rem)]">
      <div class="w-1/5 bg-white shadow px-6 py-4">
        <h2 class="text-xl font-semibold mb-4">Sort By</h2>
        <ul class="space-y-3 text-gray-700 text-sm">
          <li><button class="hover:underline">Price: Low to High</button></li>
          <li><button class="hover:underline">Price: High to Low</button></li>
          <li><button class="hover:underline">Newest First</button></li>
          <li><button class="hover:underline">Rating</button></li>
        </ul>
      </div>

      <div class="w-4/5 p-6 overflow-y-auto">
        <h2 class="text-2xl font-semibold mb-6">Products</h2>
        <div
          class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6"
        >
          <% if (products && products.length > 0) { %> <%
          products.forEach((product) => { %>
          <div class="bg-white rounded-xl shadow p-4 flex flex-col">
            <% if (product.image) { %>
            <div class="w-full h-48 rounded-lg overflow-hidden mb-3">
              <img
                src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                alt="<%= product.name %>"
                class="w-full h-full object-cover"
              />
            </div>
            <% } else { %>
            <div
              class="w-full h-48 bg-gray-200 rounded-lg mb-3 flex items-center justify-center"
            >
              <span class="text-gray-400">No image</span>
            </div>
            <% } %>
            <div class="flex-grow">
              <h3 class="text-lg font-medium"><%= product.name %></h3>
              <div class="flex items-center mt-1">
                <% if (product.discount > 0) { %>
                <span class="text-sm text-gray-400 line-through mr-2"
                  >₹<%= product.price %></span
                >
                <span class="text-sm text-green-600 font-medium">
                  ₹<%= (product.price * (100 - product.discount) /
                  100).toFixed(2) %>
                </span>
                <span
                  class="text-xs bg-red-100 text-red-800 px-2 py-0.5 rounded-full ml-2"
                >
                  <%= product.discount %>% OFF
                </span>
                <% } else { %>
                <span class="text-sm text-gray-600">₹<%= product.price %></span>
                <% } %>
              </div>
            </div>
            <button
              class="mt-3 w-full bg-green-400 hover:bg-green-500 text-white rounded-lg py-2 text-sm transition-colors"
            >
              Add to Cart
            </button>
          </div>
          <% }) %> <% } else { %>
          <div class="col-span-full text-center py-10">
            <p class="text-gray-500">No products available</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
