<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
    <title>Main Page Owner</title>
  </head>
  <body class="bg-gray-50">
    <% if (successMsg && successMsg.length > 0) { %>
    <div class="bg-green-200 text-green-800 px-4 py-2 rounded mb-4 success-message">
      <%= successMsg[0] %>
    </div>
    <% } %>
    <div
      class="w-full h-16 bg-white shadow flex items-center justify-between px-6"
    >
      <h1 class="text-2xl font-bold tracking-tight">Scatch</h1>
      <div class="flex items-center gap-6">
        <a
          class="text-white bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-lg text-sm"
          href="/createproduct"
        >
          Create Product
        </a>
        <button class="text-gray-700 hover:text-black">
          <i class="ph ph-user-circle text-2xl"></i>
        </button>
        <a
          class="bg-red-400 hover:bg-red-500 text-white px-4 py-2 rounded-lg text-sm"
          href="owners/logout"
        >
          Logout
        </a>
      </div>
    </div>

    <div class="flex h-[calc(100vh-4rem)]">
      <div class="w-1/5 bg-white shadow px-6 py-4">
        <h2 class="text-xl font-semibold mb-4">Sort By</h2>
        <ul class="space-y-3 text-gray-700 text-sm">
          <li><button class="hover:underline">Price: Low to High</button></li>
          <li><button class="hover:underline">Price: High to Low</button></li>
          <li><button class="hover:underline">Newest First</button></li>
          <li><button class="hover:underline">Rating</button></li>
        </ul>
      </div>

      <div class="w-4/5 p-6 overflow-y-auto">
        <h2 class="text-2xl font-semibold mb-6">Welcome, Owner!</h2>
        <div class="grid grid-cols-3 gap-6">
          <% if (products.length > 0) { %> <% products.forEach((product) => { %>
          <div class="bg-white rounded-xl shadow p-4">
            <div
              class="w-full h-40 rounded-lg mb-3 flex items-center justify-center"
            >
              <img src="data:image/jpeg;base64,<%=
              Buffer.from(product.image).toString("base64") %>" alt="Product
              Image" class="w-full h-full object-cover">
            </div>
            <h3 class="text-lg font-medium"><%= product.name %></h3>
            <div class="flex gap-1">
              <p class="text-sm text-gray-600 mt-1">Price:</p>
              <p class="text-sm text-gray-600 mt-1 line-through">
                <%=product.price%>
              </p>
              <p class="text-sm text-green-600 mt-1">
                â‚¹ <%=Math.round(product.price -
                product.discount*product.price/100)%>
              </p>
            </div>
            <div class="mt-3 flex gap-2">
              <a
                href="/editproduct/<%=product._id%>"
                class="w-1/2 bg-yellow-400 hover:bg-yellow-500 text-white rounded-lg py-1 text-sm text-center"
              >
                Edit
              </a>
              <form
                action="products/deleteproduct/<%=product._id%>"
                method="POST"
                class="w-1/2"
              >
                <button
                  class="w-full bg-red-400 hover:bg-red-500 text-white rounded-lg py-1 text-sm text-center delete-button"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p>No products found</p>
          <% } %>
        </div>
      </div>
    </div>
    <script>
      setTimeout(() => {
        document.querySelector(".success-message").style.display = "none";
      }, 3000);
    </script>
  </body>
</html>
